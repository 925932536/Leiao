<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.youth.banner.Banner
        android:id="@+id/home_banner"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>
    <RadioGroup
        android:id="@+id/home_rg"
        style="@style/home_radiogroup"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/home_rg_btn1"
            style="@style/home_rg_btn"
            android:drawableTop="@drawable/math"
            android:text="@string/math"/>
        <RadioButton
            android:id="@+id/home_rg_btn2"
            style="@style/home_rg_btn"
            android:drawableTop="@drawable/chinese"
            android:text="@string/chinese"/>
        <RadioButton
            android:id="@+id/home_rg_btn3"
            style="@style/home_rg_btn"
            android:drawableTop="@drawable/english"
            android:text="@string/english"/>
        <RadioButton
            android:id="@+id/home_rg_btn4"
            style="@style/home_rg_btn"
            android:drawableTop="@drawable/other"
            android:text="@string/other"/>
    </RadioGroup>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>
